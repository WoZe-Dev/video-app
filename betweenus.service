[Unit]
Description=BetweenUs Docker Services
Requires=docker.service
After=docker.service
After=network.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/betweenus
ExecStartPre=/home/betweenus/scripts/storage-manager.sh
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=300
User=toto
Group=docker

[Install]
WantedBy=multi-user.target
